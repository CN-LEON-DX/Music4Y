doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Login Page
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css")

  body.bg-black.flex.justify-center.items-center.min-h-screen
    div(class="bg-gray-800 shadow-2xl rounded-lg p-8" style="width: 440px;")
      h2.text-center.text-3xl.font-bold.text-white.mb-6 Verify email

      form(action="/user/verify/otp" method="POST" class="w-full")
        .mb-4
          label.block.text-gray-600.font-semibold.mb-2(for="email") Email
          input#email(type="email" value=`${email}` name="email" class="pointer-events-none shadow-md appearance-none border border-gray-300 rounded-lg w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-400")
          
        .mb-4
          label.block.text-gray-600.font-semibold.mb-2(for="OTP" ) OTP
          input#password(type="OTP" name="otp" required class="shadow-md appearance-none border border-gray-300 rounded-lg w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-400")
        if isBack === true
          p.text-sm.mt-2.text-white OTP will invalid or expired about 3 mins.
        button(class="mt-4 bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg w-full transition duration-200 transform hover:scale-105" type="submit") Verify

      .mt-4.text-center
        p.text-gray-600.text-sm Login with
      
      .flex.justify-center.mt-2
        a(class="bg-white text-blue-600 font-bold py-2 px-4 rounded-lg shadow-md hover:bg-gray-100 mx-2" href="#") 
            <i class="fa-brands fa-google"></i>
        a(class="bg-white text-blue-600 font-bold py-2 px-4 rounded-lg shadow-md hover:bg-gray-100 mx-2" href="#")
            <i class="fa-brands fa-facebook-f"></i>
      .mt-2.text-center
        p.text-gray-600.text-sm Have an account?
        a(class="text-blue-600 hover:underline" href="/user/login") Login
